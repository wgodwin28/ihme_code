clear all
macro drop _all
set mem 500m
set more off
capture log close
capture restore, not


** create locals for relevant files and folders
local log_folder "J:/Project/COMIND/Water and Sanitation/Data Audit/Code/02.Standardize Other Surveys"
local dat_folder "J:\DATA\PAK\SOCIAL_AND_LIVING_MEASUREMENT_SURVEY\1998_1999"
local dat_folder_other_merged "J:/Project/COMIND/Water and Sanitation/Data Audit/Data/Other/Merged Original Files"
local codes_folder "J:/Usable/Common Indicators/Country Codes"


** water, sanitation dataset
	use "`dat_folder'/PAK_PIH_HIES_1998_1999_HOUSING.DTA ", clear
	tostring hhcode, replace
	gen psu = substr(hhcode, 1, 7)
	destring hhcode, replace
	destring psu, replace
	tempfile hhserv
	save `hhserv', replace
		** hhcode
	
** ** household weights dataset
	** use "`dat_folder'/PAK_PIH_HIES_1998_1999_PSUWGHT.DTA", clear
	** tempfile hhweight
	** save `hhweight', replace
		** ** hhcode
		
** psu, urban/rural dataset
	use "`dat_folder'/PAK_PIH_HIES_1998_1999_ROSTER.DTA", clear
	tempfile hhpsu
	save `hhpsu', replace
		** hhid
	

** merge
use `hhserv', clear
merge 1:m hhcode using `hhpsu'
drop if _merge != 3
drop _merge


** ** apply labels



** save
cd "`dat_folder_other_merged'"
save "slms_pakistan_1998", replace


capture log close